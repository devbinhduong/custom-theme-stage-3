{
  "components/halothemes/ask-an-expert/halo-ask-an-expert-content": "{{#if theme_settings.halo_ask_an_expert_title}}\n    <div class=\"modal-header\">\n        <h2 class=\"modal-header-title\">{{theme_settings.halo_ask_an_expert_title}}</h2>\n    </div>\n{{/if}}\n<div class=\"modal-body\" {{#if page_type '==' 'product'}}data-product-id=\"{{product.id}}\" data-product-title=\"{{product.title}}\" data-product-url=\"{{product.url}}\" data-product-sku=\"{{product.sku}}\" data-product-image=\"{{getImage product.main_image}}\"{{/if}}>\n    {{#if theme_settings.halo_ask_an_expert_desc1}}\n        <h3 class=\"halo-ask-an-expert-heading\">\n            <span>{{theme_settings.halo_ask_an_expert_desc1}}</span>\n        </h3>\n    {{/if}}\n    {{#if theme_settings.halo_ask_an_expert_desc2}}\n        <div class=\"halo-ask-an-expert-text\">{{theme_settings.halo_ask_an_expert_desc2}}</div>\n    {{/if}}\n    <span class=\"halo-line\">halo line</span>\n    {{#if theme_settings.halo_ask_an_expert_desc3}}\n        <div class=\"halo-ask-an-expert-intro\">{{theme_settings.halo_ask_an_expert_desc3}}</div>\n    {{/if}}\n    <div id=\"halo-ask-an-expert-results\" class=\"halo-ask-an-expert-text\"></div>\n    <form class=\"form\" id=\"halo-ask-an-expert-form\">\n        <div class=\"form-field\">\n            <label class=\"form-label hiddenLabels\" for=\"customer_name\">Your Name</label>\n            <input required type=\"text\" class=\"form-input\" name=\"customer_name\" id=\"customer_name\" placeholder=\"Your Name\">\n        </div>\n        <div class=\"form-field\">\n            <label class=\"form-label hiddenLabels\" for=\"customer_email\">Your Email</label>\n            <input required type=\"text\" class=\"form-input\" name=\"customer_email\" id=\"customer_email\" placeholder=\"Your Email\">\n        </div>\n        <div class=\"form-field\">\n            <label class=\"form-label hiddenLabels\" for=\"customer_phone\">Your Phone</label>\n            <input required type=\"tel\" class=\"form-input\" name=\"customer_phone\" id=\"customer_phone\" placeholder=\"Your Phone\">\n        </div>\n        <div class=\"form-field form-field-radio\">\n            <label class=\"form-label\">Do you need:</label>\n            <input class=\"form-radio\" id=\"pricing-radio\" type=\"radio\" name=\"type_package\" checked value=\"Pricing\">\n            <label class=\"form-label\" for=\"pricing-radio\">Pricing</label>\n            <input class=\"form-radio\" id=\"answers-radio\" type=\"radio\" name=\"type_package\" value=\"Answers\">\n            <label class=\"form-label\" for=\"answers-radio\">Answers</label>\n            <input class=\"form-radio\" id=\"both-radio\" type=\"radio\" name=\"type_package\" value=\"Pricing & Answers\">\n            <label class=\"form-label\" for=\"both-radio\">Both</label>\n        </div>\n        <div class=\"form-field form-field-textarea\">\n            <label class=\"form-label\" for=\"comment_area\">What can i help you with today?</label>\n            <textarea name=\"comment_area\" cols=\"30\" rows=\"6\" class=\"form-input\" id=\"comment_area\" required></textarea>\n        </div>\n        <div class=\"form-field form-field-radio form-field-radio2\">\n            <label class=\"form-label form-label-custom\">How would you like me to contact you?</label>\n            <input class=\"form-radio\" id=\"phone-radio\" type=\"radio\" name=\"type_contact\" checked value=\"Phone\">\n            <label class=\"form-label\" for=\"phone-radio\">Phone</label>\n            <input class=\"form-radio\" id=\"email-radio\" type=\"radio\" name=\"type_contact\" value=\"Email\">\n            <label class=\"form-label\" for=\"email-radio\">Email</label>\n            <input class=\"form-radio\" id=\"both-radio-2\" type=\"radio\" name=\"type_contact\" value=\"Phone & Email\">\n            <label class=\"form-label\" for=\"both-radio-2\">Both</label>\n        </div>\n        <div class=\"form-actions\">\n           <button type=\"button\" class=\"button button--tertiary\" id=\"halo-ask-an-expert-button\">Send Question</button>\n        </div>\n    </form>\n</div>\n"
}